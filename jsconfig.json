{
    "compilerOptions": {
        "target": "ES6", 
        "baseUrl": "./src",
        "paths": {
            "@src/*": ["./src/*"],
            "@api/*": ["./src/api/*"],
            "@components/*": ["./src/components/*"],
            "@contexts/*": ["./src/contexts/*"],
            "@pages/*": ["./src/pages/*"],
            "@routes/*": ["./src/routes/*"],
            "@internals/*": ["./src/internals/*"],
            "@theme/*": ["./src/theme/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "build", "dist"]
}